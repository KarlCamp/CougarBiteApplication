<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cougarbitebackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.kcamp.cougarbiteapplication.CustomizeSandwichesScreenActivity"
    tools:showIn="@layout/app_bar_food_screen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/food_name"
                        android:padding="12dp"
                        android:text="Food Name"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_attach_money_black_24dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/food_price"
                            android:text="1000"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:textSize="18sp" />
                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:id="@+id/number_button"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="18dp"
                            android:layout_marginEnd="30dp"
                            app:textSize="8sp"
                            app:backGroundColor="@color/colorAccent"
                            app:initialNumber="1"
                            app:finalNumber="9"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_description"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="12dp"
                    android:text="Description"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_nutrition"
                    android:layout_marginTop="12dp"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="12dp"
                    android:text="Nutrition"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toppings"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="18sp"
                        android:text="Toppings"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/Lettuce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lettuce"
                            android:textSize="10sp"
                            android:layout_marginStart="38dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/Tomato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomato"
                            android:textSize="10sp"
                            android:layout_marginStart="118dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/Onion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Onion"
                            android:textSize="10sp"
                            android:layout_marginStart="34dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/Pickle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickle"
                            android:textSize="10sp"
                            android:layout_marginStart="126dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/extras"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="18sp"
                        android:text="Extras"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/Bacon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bacon"
                            android:textSize="10sp"
                            android:layout_marginStart="35dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/Cheese"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheese"
                            android:textSize="10sp"
                            android:layout_marginStart="123dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/Avocado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avocado"
                            android:textSize="10sp"
                            android:layout_marginStart="40dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/FriedEgg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fried Egg"
                            android:textSize="10sp"
                            android:layout_marginStart="111dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">
                        <CheckBox
                            android:id="@+id/Chicken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicken"
                            android:textSize="10sp"
                            android:layout_marginStart="38dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/Patty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patty"
                            android:textSize="10sp"
                            android:layout_marginStart="107dp"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:onClick="onCheckboxClicked"
                            />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>